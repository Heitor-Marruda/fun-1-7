5-programa

{

	

 funcao inicio()

 {



	

 inteiro operador 



 escreva ("Escolha os o operador que deseja. (0 = +, 1 = - , 2 = /, 3 = *): ")

 leia (operador)

	

      escolha(operador){

       

  

   caso 0: soma(0,0)

   pare

   caso 1: subtracao(0,0)

   pare

   caso 2: divisao(0,0)

   pare

   caso 3: multiplicacao(0,0)

   pare

   

  }

  

 }



 funcao soma(inteiro x, inteiro y){

 escreva("escolha o primeiro numero a ser somado")

 leia(x)

 escreva("escolha o segundo")

 leia(y)

 escreva(x+y) 

  

 }



 funcao subtracao(inteiro x, inteiro y){

 escreva("escolha o primeiro numero a ser subtraido")

 leia(x)

 escreva("escolha o segundo")

 leia(y)

 escreva(x-y)  

	

  

 }



 funcao divisao(inteiro x, inteiro y){

  

 escreva("escolha o primeiro numero a ser dividido")

 leia(x)

 escreva("escolha o segundo")

 leia(y)

 escreva(x/y)

  

 }



 funcao multiplicacao (inteiro x, inteiro y){

  

 escreva("escolha o primeiro numero a ser multiplicado")

 leia(x)

 escreva("escolha o segundo")

 leia(y)

 escreva(x*y)  

  

 }









	

	

}
